{
  "name": "react-experiment",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">= 10.4.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Edge versions"
  ],
  "scripts": {
    "build": "yarn run build:ui && yarn run build:lambda",
    "build:ui": "parcel build src/index.html --out-dir target/dist --public-url ./ --no-cache --no-source-maps",
    "build:lambda": "parcel build src/lambda/functions/*.ts --out-dir target/functions --target node --no-cache --no-source-maps",
    "check": "yarn run lint && yarn run prettier:check && yarn run typescript && yarn run test",
    "clean": "rimraf target/dist/*.* target/functions/*.*",
    "lint": "tslint -p . \"{src,test}/**/*.{ts,tsx}\"",
    "prettier:fix": "prettier --write \"{src,test}/**/*.{ts,tsx,json}\"",
    "prettier:check": "prettier --list-different \"{src,test}/**/*.{ts,tsx,json}\"",
    "start:ui": "parcel serve src/index.html --out-dir target/serve --port 8080 --no-cache",
    "start:lambda": "cd src/lambda && node -r ts-node/register/transpile-only lambda-dev.ts",
    "test": "jest",
    "typescript": "tsc --noEmit -p ."
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "enzyme",
    "setupTestFrameworkScriptFile": "<rootDir>test/setupTests.ts",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": ["TS151001"]
        }
      }
    }
  },
  "dependencies": {
    "bluebird": "3.5.2",
    "react": "16.5.2",
    "react-dom": "16.5.2",
    "react-router-dom": "4.3.1",
    "semantic-ui-css": "2.4.0",
    "semantic-ui-react": "0.82.5",
    "tslib": "1.9.3"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.13",
    "@types/bluebird": "3.5.24",
    "@types/enzyme": "3.1.14",
    "@types/express": "4.16.0",
    "@types/jest": "23.3.2",
    "@types/react": "16.4.14",
    "@types/react-dom": "16.0.8",
    "@types/react-router-dom": "4.3.1",
    "body-parser": "1.18.3",
    "enzyme": "3.6.0",
    "enzyme-adapter-react-16": "1.5.0",
    "express": "4.16.3",
    "jest": "23.6.0",
    "jest-environment-enzyme": "6.1.2",
    "jest-enzyme": "6.1.2",
    "parcel": "1.10.1",
    "parcel-plugin-bundle-visualiser": "1.2.0",
    "prettier": "1.14.3",
    "raf": "3.4.0",
    "react-hot-loader": "4.3.11",
    "rimraf": "2.6.2",
    "ts-jest": "23.10.3",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-react": "3.6.0",
    "typescript": "3.1.1"
  }
}
