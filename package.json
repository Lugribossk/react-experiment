{
  "name": "react-experiment",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">= 10.4.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Edge versions"
  ],
  "scripts": {
    "start": "parcel src/index.html --out-dir target/serve --no-cache",
    "build": "parcel build src/index.html --out-dir target/dist --public-url ./ --no-cache",
    "lint": "tslint -p . \"{src,test}/**/*.{ts,tsx}\"",
    "prettier": "prettier --write \"{src,test}/**/*.{ts,tsx,json}\"",
    "prettier-check": "prettier --list-different \"{src,test}/**/*.{ts,tsx,json}\""
  },
  "dependencies": {
    "bluebird": "3.5.1",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "tslib": "1.9.2"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.20",
    "@types/react": "16.3.16",
    "@types/react-dom": "16.0.6",
    "parcel-bundler": "1.9.0",
    "parcel-plugin-bundle-visualiser": "1.1.2",
    "parcel-plugin-typescript": "1.0.0",
    "prettier": "1.13.5",
    "react-hot-loader": "4.3.0",
    "tslint": "5.10.0",
    "tslint-react": "3.6.0",
    "typescript": "2.9.1"
  }
}
